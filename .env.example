# ==============================================================================
# Bricli - Environment Variables Template
# ==============================================================================
# Copy this file to `.env` and fill in your actual values.
# NEVER commit `.env` to version control - it contains secrets!
# ==============================================================================

# ------------------------------------------------------------------------------
# Django Core Settings
# ------------------------------------------------------------------------------

# SECURITY WARNING: Generate a new secret key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here-CHANGE-THIS

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts (no spaces)
ALLOWED_HOSTS=bricli.ro,www.bricli.ro,localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF (include https://)
CSRF_TRUSTED_ORIGINS=https://bricli.ro,https://www.bricli.ro

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------

# For local development (SQLite):
# Leave DATABASE_URL empty or comment it out

# For production (PostgreSQL):
DATABASE_URL=postgresql://username:password@localhost:5432/bricli

# ------------------------------------------------------------------------------
# Email Configuration
# ------------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_TIMEOUT=30
DEFAULT_FROM_EMAIL=Bricli <noreply@bricli.ro>
SERVER_EMAIL=server@bricli.ro
SUPPORT_EMAIL=support@bricli.ro

# Static and Media Files (for production)
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/path/to/static/files/
MEDIA_ROOT=/path/to/media/files/

# Security Settings (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ------------------------------------------------------------------------------
# Payment Processing (Stripe)
# ------------------------------------------------------------------------------
# NOTE: Subscriptions are currently DISABLED (BETA mode)
# Set SUBSCRIPTIONS_ENABLED=True when ready to accept payments

# Test mode keys (for development):
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Production keys (uncomment when going live):
# STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
# STRIPE_SECRET_KEY=sk_live_your_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs (create in Stripe Dashboard first)
STRIPE_PLUS_PRICE_ID=price_your_plus_tier_price_id
STRIPE_PRO_PRICE_ID=price_your_pro_tier_price_id

# ------------------------------------------------------------------------------
# Smart Bill Integration (Romanian Invoicing)
# ------------------------------------------------------------------------------

SMARTBILL_USERNAME=your-smartbill-username
SMARTBILL_API_KEY=your-smartbill-api-key
SMARTBILL_CIF=your-company-fiscal-code

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------

# Enable/disable subscription payments (BETA = False, LIVE = True)
SUBSCRIPTIONS_ENABLED=False

# ------------------------------------------------------------------------------
# Third-party Services (Optional)
# ------------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Logging (optional)
LOG_LEVEL=INFO
LOG_FILE=/path/to/logs/bricli.log

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/1

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0